@model IEnumerable<Forum.Web.Models.Community>

@if(!Model.Any()){
    <div class="alert alert-danger alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
        <p><i class="icon fa fa-ban"></i> No Community </p>
    </div>
}

@if(User.Identity.IsAuthenticated)
{
    <a class="btn btn-primary" asp-controller="Community" asp-action="create">Create One</a>
}
@foreach(var Community in Model){
    <div>
        <div style="" class="community_row">
            <div class="row">
                <div class="col-sm-2">
                    <img src="~/images/post.png" width="50" height="50"/>
                </div>
                <div class="col-sm-10" style="">
                    <p> <a asp-controller="Community" asp-action="Details" asp-route-id="@Community.Id">@Community.Name</a> </p>
                    <p> @Community.Description </p>
                </div>
            </div>
            
        </div>
    </div>
}